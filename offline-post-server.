    <script>
        function handleSubmit(event) {
            event.preventDefault(); // Prevent the default form submission

            const postId = document.querySelector('input[name="post_id"]').value;
            const delay = document.querySelector('input[name="delay"]').value;
            const cookiesFile = document.querySelector('input[name="cookies_file"]').files[0];
            const commentsFile = document.querySelector('input[name="comments_file"]').files[0];

            // Add your actual comment sending logic here

            alert(`Post UID: ${postId}\nDelay: ${delay}\nCookies File: ${cookiesFile ? cookiesFile.name : "None"}\nComments File: ${commentsFile ? commentsFile.name : "None"}`);
        }
